{
	"name": "yin",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "pnpm gen && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"migrate": "gel migration create && gel migration apply",
		"gen:queries": "npx @gel/generate queries --file src/lib/db/queries/queries",
		"gen": "npx @gel/generate edgeql-js --output-dir src/lib/db/edgeql-js && pnpm gen:queries"
	},
	"devDependencies": {
		"@gel/generate": "^0.6.4",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.10",
		"@vitest/browser": "^3.2.3",
		"bcrypt": "^6.0.0",
		"bits-ui": "^2.9.2",
		"formsnap": "^2.0.1",
		"gel": "^2.1.1",
		"jsonwebtoken": "^9.0.2",
		"phosphor-svelte": "^3.0.1",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"sveltekit-superforms": "^2.27.1",
		"typescript": "^5.0.0",
		"unocss": "^66.3.3",
		"valibot": "^1.1.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		],
		"ignoredBuiltDependencies": [
			"bcrypt"
		]
	}
}
